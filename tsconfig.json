{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "lib": ["esnext"],
    "alwaysStrict": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@plugins": ["src/plugins/index"],
      "@builtin": ["src/builtin"]
    }
  }
}
